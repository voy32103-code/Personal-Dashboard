@page
@using MyPortfolio.Web.Pages
@model IndexModel
@{
    // Title được set trong Backend (Index.cshtml.cs)
}

<div class="d-flex flex-column mb-4 ps-3 pe-3 pt-3">
    <div class="d-flex justify-content-between align-items-center">
        <h2 class="text-white fw-bold" id="page-title">@ViewData["Title"]</h2>

        @if (User.Identity != null && User.Identity.IsAuthenticated)
        {
            <a asp-page="./Portfolio/Create" class="btn btn-success btn-sm rounded-pill fw-bold">
                <i class="fas fa-plus"></i> Thêm bài mới
            </a>
        }
    </div>

    <div id="search-container" class="mt-3" style="@(string.IsNullOrEmpty(Model.SearchString) ? "display:none;" : "display:block;")">
        <form method="get">
            <div class="input-group">
                <span class="input-group-text bg-dark border-0 text-white"><i class="fas fa-search"></i></span>
                <input type="text" name="SearchString" value="@Model.SearchString"
                       class="form-control bg-dark border-0 text-white"
                       placeholder="Bạn muốn nghe gì?" onchange="this.form.submit()">
                <input type="hidden" name="Mode" value="@Model.Mode" />
            </div>
        </form>
    </div>
</div>

<div class="card-grid ps-3 pe-3">
    @if (Model.Projects != null && Model.Projects.Count > 0)
    {
        @foreach (var item in Model.Projects)
        {
            <div class="spotify-card position-relative" style="cursor: pointer;"
                 onclick="window.location.href='/Portfolio/Details/@item.Id'">

                <div style="position: relative;">
                    <img src="@(string.IsNullOrEmpty(item.ImageUrl) ? "https://via.placeholder.com/150" : item.ImageUrl)"
                         class="card-img" alt="@item.Title" />
                </div>

                <div class="card-title text-white">@item.Title</div>
                <div class="card-desc">@item.Description</div>

                <form method="post" asp-page-handler="ToggleHeart" asp-route-id="@item.Id"
                      class="position-absolute top-0 end-0 m-2 stop-prop">
                    <input type="hidden" name="SearchString" value="@Model.SearchString" />
                    <input type="hidden" name="Mode" value="@Model.Mode" />
                    <button type="button"
                            class="btn btn-sm btn-transparent border-0 p-0 position-absolute top-0 end-0 m-2 stop-prop"
                            onclick="toggleHeart(event, @item.Id, this)">

                        @if (item.IsFavorite)
                        {
                            <i class="fas fa-heart fa-lg text-spotify heart-anim"></i>
                        }
                        else
                        {
                            <i class="far fa-heart fa-lg text-white-50 hover-bright"></i>
                        }
                    </button>
                </form>

                @if (User.Identity != null && User.Identity.IsAuthenticated)
                {
                    <div class="mt-3 d-flex justify-content-between align-items-center stop-prop">
                        <a asp-page="./Portfolio/Edit" asp-route-id="@item.Id" class="text-muted small hover-white text-decoration-none">
                            <i class="fas fa-pen"></i> Sửa
                        </a>
                        <a asp-page="./Portfolio/Delete" asp-route-id="@item.Id" class="text-muted small hover-white text-decoration-none">
                            <i class="fas fa-trash"></i> Xóa
                        </a>
                    </div>
                }
            </div>
        }
    }
    else
    {
        <div class="text-white ps-2 opacity-75">
            @if (Model.Mode == "library")
            {
                <p>Thư viện trống. Hãy thả tim <i class="fas fa-heart text-spotify"></i> vài bài hát nhé!</p>
            }
            else
            {
                <p>Không tìm thấy bài hát nào.</p>
            }
        </div>
    }
</div>

<style>
    /* Màu xanh Spotify */
    .text-spotify {
        color: #1db954 !important;
    }

    .btn-transparent {
        background: transparent;
    }

    /* Animation Tim */
    .heart-anim {
        animation: heart-beat 0.3s ease-in-out;
    }

    @@keyframes heart-beat {
        0% {
            transform: scale(1);
        }

        50% {
            transform: scale(1.3);
        }

        100% {
            transform: scale(1);
        }
    }

    .hover-bright:hover {
        color: #fff !important;
        transform: scale(1.1);
        transition: 0.2s;
    }

    .hover-white:hover {
        color: #fff !important;
        text-decoration: underline !important;
    }

    .spotify-card:hover {
        transform: scale(1.02);
        background-color: #282828;
    }
</style>

@Html.AntiForgeryToken() <script>
    // Chặn sự kiện click nổi bọt (để bấm Tim/Sửa/Xóa không bị chuyển trang)
    document.querySelectorAll('.stop-prop').forEach(el => {
        el.addEventListener('click', e => {
            e.stopPropagation();
        });
    });
    // Hàm xử lý thả tim không reload
    function toggleHeart(e, id, btnElement) {
        // 1. Chặn sự kiện click lan ra ngoài (để không bị nhảy vào trang chi tiết)
        e.stopPropagation();
        e.preventDefault();

        // 2. Lấy icon bên trong nút bấm
        var icon = btnElement.querySelector('i');

        // 3. Lấy mã bảo mật AntiForgeryToken (ASP.NET bắt buộc cái này)
        var token = document.querySelector('input[name="__RequestVerificationToken"]').value;

        // 4. Gửi yêu cầu lên Server (AJAX Fetch)
        fetch(`?handler=ToggleHeart&id=${id}`, {
            method: 'POST',
            headers: {
                'Content-Type': 'application/x-www-form-urlencoded',
                'RequestVerificationToken': token
            }
        })
        .then(response => response.json())
        .then(data => {
            if (data.success) {
                // 5. Cập nhật giao diện dựa trên kết quả trả về
                if (data.isFavorite) {
                    // Chuyển sang tim đặc, màu xanh, có hiệu ứng nảy
                    icon.className = "fas fa-heart fa-lg text-spotify heart-anim";
                } else {
                    // Chuyển sang tim rỗng, màu trắng mờ
                    icon.className = "far fa-heart fa-lg text-white-50 hover-bright";
                }
            } else {
                alert("Có lỗi xảy ra, vui lòng thử lại!");
            }
        })
        .catch(error => console.error('Error:', error));
    }
</script>