@page
@model MyPortfolio.Web.Pages.Portfolio.EditModel

<h2>Chỉnh Sửa Dự Án</h2>
<hr />

<div class="row">
    <div class="col-md-6">
        <form method="post" enctype="multipart/form-data">

            <input type="hidden" asp-for="PortfolioItem.Id" />
            <input type="hidden" asp-for="PortfolioItem.CreatedDate" />

            <input type="hidden" asp-for="PortfolioItem.ImageUrl" />

            <div class="form-group mb-3">
                <label class="control-label">Tên Dự Án</label>
                <input asp-for="PortfolioItem.Title" class="form-control" />
            </div>

            <div class="form-group mb-3">
                <label class="control-label">Mô Tả</label>
                <textarea asp-for="PortfolioItem.Description" class="form-control"></textarea>
            </div>

            <div class="form-group mb-3">
                <label class="control-label">Ảnh Hiện Tại</label> <br />
                <img src="@Model.PortfolioItem.ImageUrl" style="max-width: 200px; margin-bottom: 10px;" class="img-thumbnail" />

                <label class="control-label d-block">Đổi Ảnh Khác (Nếu muốn)</label>
                <input type="file" asp-for="ImageUpload" class="form-control" accept="image/*" />
            </div>

            <div class="form-group mb-3">
                <label class="control-label">Link Github/Web</label>
                <input asp-for="PortfolioItem.ProjectUrl" class="form-control" />
            </div>

            <div class="form-group">
                <input type="submit" value="Lưu Thay Đổi" class="btn btn-warning" />
                <a asp-page="/Index" class="btn btn-secondary">Hủy</a>
            </div>
        </form>
    </div>
</div>