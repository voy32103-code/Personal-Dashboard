@page "{id:int}"
@model MyPortfolio.Web.Pages.Portfolio.DetailsModel
@{
    ViewData["Title"] = Model.PortfolioItem.Title;
}

<style>
    .detail-container {
        padding: 40px;
        color: white;
        padding-bottom: 120px;
    }

    /* Header: Ảnh to + Thông tin */
    .song-header {
        display: flex;
        gap: 40px;
        margin-bottom: 40px;
        align-items: flex-end;
    }

    .song-cover-big {
        width: 300px;
        height: 300px;
        object-fit: cover;
        border-radius: 12px;
        box-shadow: 0 10px 40px rgba(0,0,0,0.6);
    }

    .song-info {
        display: flex;
        flex-direction: column;
    }

    .song-type {
        font-size: 0.9rem;
        font-weight: bold;
        text-transform: uppercase;
        margin-bottom: 8px;
    }

    .song-title-big {
        font-size: 3.5rem;
        font-weight: 800;
        margin-bottom: 20px;
        line-height: 1.1;
    }

    .song-meta {
        display: flex;
        align-items: center;
        gap: 10px;
        font-size: 1rem;
        color: #b3b3b3;
    }

    .artist-avatar-small {
        width: 30px;
        height: 30px;
        border-radius: 50%;
        object-fit: cover;
    }

    .meta-dot {
        font-size: 0.8rem;
    }

    /* Nút bấm (Actions) */
    .action-buttons {
        margin-top: 30px;
        display: flex;
        align-items: center;
        gap: 20px;
    }

    .btn-play-big {
        background-color: #1db954;
        color: black;
        border: none;
        width: 60px;
        height: 60px;
        border-radius: 50%;
        font-size: 1.5rem;
        display: flex;
        align-items: center;
        justify-content: center;
        transition: 0.2s;
        cursor: pointer;
    }

        .btn-play-big:hover {
            transform: scale(1.05);
            background-color: #1ed760;
        }

    .btn-icon-action {
        background: transparent;
        border: none;
        color: #b3b3b3;
        font-size: 2rem;
        transition: 0.2s;
    }

        .btn-icon-action:hover {
            color: white;
            transform: scale(1.1);
        }

    .text-spotify {
        color: #1db954 !important;
    }

    /* Layout Grid: Lyrics & Artist */
    .content-grid {
        display: grid;
        grid-template-columns: 1.8fr 1fr;
        gap: 60px;
        margin-top: 40px;
    }

    /* Lyrics Box (Hiệu ứng Kara) */
    .lyrics-container {
        margin-top: 20px;
    }

    .lyrics-line {
        font-size: 1.5rem;
        color: #b3b3b3;
        margin-bottom: 20px;
        transition: all 0.3s ease;
        cursor: pointer;
        font-weight: 600;
    }

        .lyrics-line:hover {
            color: white;
        }

        .lyrics-line.active {
            color: white;
            font-size: 1.7rem;
            transform: scale(1.02);
            origin: left;
            text-shadow: 0 0 10px rgba(255,255,255,0.3);
        }

    /* Artist Box */
    .artist-section {
    }

    .artist-card {
        background: #181818;
        padding: 20px;
        border-radius: 8px;
        transition: 0.3s;
        cursor: pointer;
    }

        .artist-card:hover {
            background: #282828;
        }

    .artist-img-large {
        width: 100%;
        aspect-ratio: 1/1;
        border-radius: 50%;
        object-fit: cover;
        margin-bottom: 15px;
        box-shadow: 0 8px 24px rgba(0,0,0,0.5);
    }

    @@media (max-width: 768px) {
        .song-header

    {
        flex-direction: column;
        align-items: center;
        text-align: center;
    }

    .song-cover-big {
        width: 220px;
        height: 220px;
    }

    .song-title-big {
        font-size: 2rem;
    }

    .content-grid {
        grid-template-columns: 1fr;
    }

    }
</style>

<div class="detail-container">
    <div class="song-header">
        <img src="@(string.IsNullOrEmpty(Model.PortfolioItem.ImageUrl) ? "https://via.placeholder.com/300" : Model.PortfolioItem.ImageUrl)"
             class="song-cover-big" />

        <div class="song-info">
            <div class="song-type">Song</div>
            <div class="song-title-big">@Model.PortfolioItem.Title</div>

            <div class="song-meta">
                <img src="@Model.PortfolioItem.ImageUrl" class="artist-avatar-small" /> <span class="fw-bold text-white">@(Model.PortfolioItem.Artist ?? "Unknown Artist")</span>
                <span class="meta-dot">•</span>
                <span>@Model.PortfolioItem.CreatedDate.ToString("yyyy")</span>
                <span class="meta-dot">•</span>
                <span>3:45</span>
            </div>

            <div class="action-buttons">
                <button class="btn-play-big" onclick="playCurrentSong()">
                    <i class="fas fa-play"></i>
                </button>

                <form method="post" asp-page-handler="ToggleHeart" asp-route-id="@Model.PortfolioItem.Id" class="d-inline">
                    <button type="submit" class="btn-icon-action">
                        @if (Model.PortfolioItem.IsFavorite)
                        {
                            <i class="fas fa-heart text-spotify"></i>
                        }
                        else
                        {
                            <i class="far fa-heart"></i>
                        }
                    </button>
                </form>

                <button class="btn-icon-action"><i class="fas fa-ellipsis-h"></i></button>
            </div>
        </div>
    </div>

    <div class="content-grid">
        <div>
            <h3 class="fw-bold mb-4">Lyrics</h3>
            <div class="lyrics-container" id="lyrics-display">
                <div class="text-muted">Loading lyrics...</div>
            </div>

            <textarea id="raw-lyrics" style="display:none;">@Model.PortfolioItem.Lyrics</textarea>
        </div>

        <div class="artist-section">
            <h3 class="fw-bold mb-4">Artist</h3>
            <div class="artist-card">
                <img src="@Model.PortfolioItem.ImageUrl" class="artist-img-large" />
                <div class="fw-bold fs-5 mb-2">@(Model.PortfolioItem.Artist ?? "Unknown Artist")</div>
                <div class="text-muted small mb-3">Artist</div>
                <button class="btn btn-outline-light rounded-pill btn-sm px-3 fw-bold text-uppercase">Follow</button>
            </div>

            <div class="mt-5 p-4 rounded" style="background: #2a2a2a;">
                <h5 class="fw-bold mb-3">About this project</h5>
                <p class="text-gray mb-0">@Model.PortfolioItem.Description</p>
                @if (!string.IsNullOrEmpty(Model.PortfolioItem.ProjectUrl))
                {
                    <a href="@Model.PortfolioItem.ProjectUrl" target="_blank" class="btn btn-dark rounded-pill mt-3 btn-sm">
                        <i class="fab fa-github"></i> View Source
                    </a>
                }
            </div>
        </div>
    </div>
</div>
@section Scripts {
    <script>
        // --- 1. TỰ ĐỘNG PHÁT NHẠC KHI VÀO TRANG ---
        $(document).ready(function() {
            var audioUrl = '@Model.PortfolioItem.AudioUrl';
            // Chỉ phát nếu có link nhạc
            if (audioUrl && audioUrl.length > 0) {
                playMusic(
                    '@Model.PortfolioItem.AudioUrl',       // Link nhạc
                    '@Model.PortfolioItem.Title',          // Tên bài
                    '@Model.PortfolioItem.ImageUrl',       // Ảnh bìa
                    '@Model.PortfolioItem.Artist'          // Ca sĩ
                );
            }
        });

        // --- 2. HÀM PHÁT NHẠC (Nút Play to) ---
        function playCurrentSong() {
            playMusic(
                '@Model.PortfolioItem.AudioUrl',
                '@Model.PortfolioItem.Title',
                '@Model.PortfolioItem.ImageUrl',
                '@Model.PortfolioItem.Artist'
            );
        }

        // --- 3. XỬ LYRICS SYNC ---
        const rawLyrics = document.getElementById('raw-lyrics').value;
        const lyricsContainer = document.getElementById('lyrics-display');
        let lyricsData = [];

        // Hàm parse LRC
        function parseLyrics(lrc) {
            const lines = lrc.split('\n');
            const result = [];
            lines.forEach(line => {
                const match = line.match(/^\[(\d{2}):(\d{2})\.(\d{2})\](.*)/);
                if (match) {
                    const minutes = parseInt(match[1]);
                    const seconds = parseInt(match[2]);
                    const millis = parseInt(match[3]);
                    const time = minutes * 60 + seconds + millis / 100;
                    const text = match[4].trim();
                    if(text) result.push({ time, text });
                }
            });
            return result;
        }

        // Render Lyrics
        if (rawLyrics && rawLyrics.trim().length > 0) {
            lyricsData = parseLyrics(rawLyrics);
            if (lyricsData.length > 0) {
                lyricsContainer.innerHTML = lyricsData.map((line, index) =>
                    `<div class="lyrics-line" id="line-${index}" onclick="seekTo(${line.time})">${line.text}</div>`
                ).join('');
            } else {
                lyricsContainer.innerHTML = `<div class="text-gray" style="white-space: pre-line; line-height: 1.8;">${rawLyrics}</div>`;
            }
        } else {
            lyricsContainer.innerHTML = '<div class="text-muted fst-italic">Chưa có lời bài hát cho dự án này.</div>';
        }

        // --- 4. ĐỒNG BỘ LYRICS KHI NHẠC CHẠY ---
        window.addEventListener('audioTimeUpdate', function(e) {
            const currentTime = e.detail.currentTime;

            // Tìm dòng đang hát
            let activeIndex = -1;
            for (let i = 0; i < lyricsData.length; i++) {
                if (currentTime >= lyricsData[i].time) {
                    activeIndex = i;
                } else {
                    break;
                }
            }

            // Highlight dòng đó
            if (activeIndex !== -1) {
                document.querySelectorAll('.lyrics-line').forEach(el => el.classList.remove('active'));
                const activeLine = document.getElementById(`line-${activeIndex}`);
                if (activeLine) {
                    activeLine.classList.add('active');
                    activeLine.scrollIntoView({ behavior: "smooth", block: "center" });
                }
            }
        });

        // --- 5. TUA NHẠC KHI BẤM VÀO LỜI ---
        function seekTo(time) {
            const audio = document.getElementById('audio-player');
            if(audio) {
                audio.currentTime = time;
                audio.play();
                // Đổi icon Play thành Pause
                const playIcon = document.getElementById('play-icon');
                if(playIcon) {
                    playIcon.classList.remove('fa-play');
                    playIcon.classList.add('fa-pause');
                }
            }
        }
    </script>
}