@page
@model MyPortfolio.Web.Pages.LoginModel
@{
    Layout = null; ViewData["Title"] = "Đăng Nhập Admin";
}

<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - My Portfolio</title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" />
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
</head>
<body class="login-body aurora-bg-container" style="position: relative; z-index: 1;">
    <div class="aurora-blob blob-1"></div>
    <div class="aurora-blob blob-2"></div>

    <div class="glass-panel p-5" style="width: 100%; max-width: 450px; text-align: center;">
        <div class="login-logo mb-4 text-success display-3">
            <i class="fab fa-spotify"></i>
        </div>

        <h2 class="glitch-text mb-4" data-text="ADMIN ACCESS">ADMIN ACCESS</h2>

        @if (!string.IsNullOrEmpty(Model.ErrorMessage))
        {
            <div class="alert alert-danger bg-danger text-white border-0 py-2 mb-4 small fw-bold">
                <i class="fas fa-exclamation-circle"></i> @Model.ErrorMessage
            </div>
        }

        <form method="post" class="mb-3">
            <div class="form-group text-start mb-3">
                <label class="text-white-50 fw-bold small mb-2 ms-1">Email</label>
                <input asp-for="Email" class="neumorph-input" placeholder="admin@example.com" />
            </div>

            <div class="form-group text-start mb-4">
                <label class="text-white-50 fw-bold small mb-2 ms-1">Password</label>
                <input asp-for="Password" type="password" class="neumorph-input" placeholder="********" />
            </div>

            <button type="submit" class="neumorph-btn w-100 py-3 rounded-pill text-success text-uppercase" style="letter-spacing: 2px;">
                Login
            </button>
        </form>

        <form asp-page-handler="ExternalLogin" method="post">
            <button type="submit" name="provider" value="Google" class="btn btn-light w-100 py-2 fw-bold text-dark d-flex align-items-center justify-content-center gap-2">
                <img src="https://cdn-icons-png.flaticon.com/512/2991/2991148.png" width="20" />
                Sign in with Google
            </button>
        </form>

        <div class="mt-5 border-top border-secondary pt-4">
            <a href="/" class="text-white-50 text-decoration-none small fw-bold hover-underline">
                <i class="fas fa-arrow-left"></i> Back to Home
            </a>
        </div>
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>